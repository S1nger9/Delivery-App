<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:strokeWidth="2dp"
    app:strokeColor="@color/gray">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/textview_order_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Orden"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:paddingBottom="8dp"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview_order_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de pedido:"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_order_id"
            app:layout_constraintEnd_toStartOf="@id/textview_date"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id="@+id/textview_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textAlignment="textEnd"
            app:layout_constraintStart_toEndOf="@id/textview_order_date_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textview_order_date_label"
            app:layout_constraintBottom_toBottomOf="@id/textview_order_date_label" />

        <TextView
            android:id="@+id/textview_address_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entregar en:"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_order_date_label"
            app:layout_constraintEnd_toStartOf="@id/textview_address"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id="@+id/textview_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Calle San Pedro"
            android:textAlignment="textEnd"
            app:layout_constraintStart_toEndOf="@id/textview_address_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textview_address_label"
            app:layout_constraintBottom_toBottomOf="@id/textview_address_label" />

        <TextView
            android:id="@+id/textview_client_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cliente:"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_address_label"
            app:layout_constraintEnd_toStartOf="@id/textview_client"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id="@+id/textview_client"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nombre del cliente"
            android:textAlignment="textEnd"
            app:layout_constraintStart_toEndOf="@id/textview_client_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textview_client_label"
            app:layout_constraintBottom_toBottomOf="@id/textview_client_label" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
